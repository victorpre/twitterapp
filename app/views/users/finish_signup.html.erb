<div class="form-signin">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_for(current_user, :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
      <h2 class="text-center form-signin-heading">Complete your profile</h2>
        <% if @show_errors && current_user.errors.any? %>
          <div id="error_explanation">
            <% current_user.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= msg %>
              </div>
            <% end %>
          </div>
        <% end %>
        <% @form_fields.each do |field|%>
          <%= f.label field.to_sym, class:"sr-only" %>
          <%= f.text_field field.to_sym, :value => '', class: 'form-control', placeholder: field.to_s.capitalize.humanize %><br>
        <% end %>
        <div class="row">
          <div class="col-xs-6">
            <%= f.submit 'Save', :class => 'btn btn-lg btn-success btn-block' %>
          </div>
          <div class="col-xs-6">
            <%= link_to 'Do it later', home_path, class: 'btn btn-lg btn-default btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
