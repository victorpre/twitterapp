<!DOCTYPE html>
<html>
  <head>
    <title>TwitterApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <!-- <div class="container"> -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">TwitterApp</a>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <%= form_for :query, url: tweets_path, method: "get", :html => {:class => "navbar-form navbar-left"} do |f| %>
              <div class="form-group">
                <%= f.text_field :q, placeholder:"#hashtag" , class: "form-control" %>
                <%= f.text_field :location, placeholder:"Location" , class: "form-control" %>
                <%= f.text_field :since, placeholder:"Since: mm/dd/yyyy" , class: "form-control" %>
                <%= f.text_field :until, placeholder:"Until: mm/dd/yyyy" , class: "form-control" %>
                <%= f.select(:attitude, [["Positive :)",":)"], ["Negative :(", ":("]], {include_blank: "Attitude"}, {:class=> "form-control"})%>
              </div>
              <%= f.submit "Search", class: "btn btn-default" %>
            <% end %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Signed in as <%= current_user.name %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Something else here</a></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        <!-- </div> -->
      </nav>
    <br>
    <%= yield %>
  <% else %>
    <%= yield %>
  <% end %>
  </body>
</html>
